		<content>
			<l:Grid content="{path:'ProgressView>/'}" class="sapUiSmallMarginTop" hSpacing="0.5" vSpacing="1" defaultSpan="XL6 L6 M11 S11"
				position="Right">
				<l:content>
					<GenericTile class="tileLayout" mode="LineMode" tooltip=" " header="{ProgressView>Label}" subheader="{ProgressView>Value}">
						<!--<f:header>-->
						<!--	<card:Header title="{ProgressView>Label}" subtitle="{ProgressView>Value}"/>-->
						<!--</f:header>-->
					</GenericTile>
				</l:content>
			</l:Grid>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>